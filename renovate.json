{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "labels": [
        "area/dependency",
        "kind/chore"
    ],
    "commitMessageAction": "Bump",
    "gomod": {
        "enabled": false
    },
    "kustomize": {
        "enabled": false
    },
    "dockerfile": {
        "enabled": true
    },
    "helm-values": {
        "enabled": false
    },
    "github-actions": {
        "enabled": false
    }
}